  "devDependencies": {
    "@types/jest": "^29.5.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "keywords": [
    "monero",
    "privacy",
    "cryptocurrency",
    "crypto",
    "ed25519",
    "keccak"

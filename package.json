{
  "name": "monero",
  "version": "0.0.1",
  "description": "",
  "files": [
    "*.js",
    "*.js.map",
    "*.d.ts",
    "*.d.ts.map"
  ],
  "author": "beritani",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/beritani/monero-js",
    "type": "git"
  },
  "scripts": {
    "test": "jest --maxWorkers=1",
    "build": "tsc",
    "build:clean": "rm *.{js,d.ts,d.ts.map} 2>/dev/null || true",
    "lint": "prettier --check 'src/**/*.{js,ts}'",
